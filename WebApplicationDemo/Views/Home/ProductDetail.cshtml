
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var media_path = "http://localhost:51227/upload/";
    var imageFirst = !string.IsNullOrEmpty(Model.ProductImage) && Model.ProductImage.Split(',').Length>0 ? Model.ProductImage.Split(',')[0]: Model.ProductImage;

}
@model WebApplicationDemo.Models.ProductModelViews
<script src="~/Scripts/js.cookie.js"></script>
<script src="~/Scripts/Views/StoreCart.js"></script>

<div class="product-section section pt-110 pb-90">
    <div class="container">
        @if (Model != null && Model.ProductId > 0)
        {


            <!-- Product Wrapper Start-->


            <div class="row">

                <!-- Product Image & Thumbnail Start -->
                <div class="col-lg-7 col-12 mb-30">
                    <input type="hidden" id="txtProductIDBuy" value="@Model.ProductId"/>
                    <!-- Product Thumbnail -->
                    <div class="single-product-thumbnail product-thumbnail-slider float-left slick-initialized slick-slider slick-vertical">
                        <button type="button" class="slick-prev slick-arrow" style="display: block;"><i class="fa fa-angle-up"></i></button>
                        <div aria-live="polite" class="slick-list draggable" style="height: 525px; padding: 0px;">
                            <div class="slick-track" role="listbox" style="opacity: 1; height: 2100px; transform: translate3d(0px, -525px, 0px);">

                                @if (Model.ProductId > 0 && !string.IsNullOrEmpty(Model.ProductImage))
                                {
                                    var classActive = "slick-active";

                                    for (int i = 0; i < Model.ProductImage.Split(',').Length; i++)
                                    {
                                        var image = Model.ProductImage.Split(',')[i];
                                        <div class="single-thumb slick-slide slick-cloned" data-slick-index="-@i" aria-hidden="true" tabindex="-1" style="width: 155px;">
                                            <img src="@media_path@image" alt="">
                                        </div>
                                    }


                                }
                            </div>
                        </div>



                        <button type="button" class="slick-next slick-arrow" style="display: block;"><i class="fa fa-angle-down"></i></button>
                    </div>

                    <!-- Product Image -->
                    <div class="single-product-image product-image-slider fix slick-initialized slick-slider">
                        <div aria-live="polite" class="slick-list draggable">
                            <div class="slick-track" role="listbox" style="opacity: 1; width: 2724px; transform: translate3d(-454px, 0px, 0px);">
                                @if (Model.ProductId > 0 && !string.IsNullOrEmpty(Model.ProductImage))
                                {
                                    var classActive = "slick-active";

                                    for (int i = 0; i < Model.ProductImage.Split(',').Length; i++)
                                    {
                                        var image = Model.ProductImage.Split(',')[i];
                                        <div class="single-thumb slick-slide slick-cloned" data-slick-index="-@i" aria-hidden="true" tabindex="-1" style="width: 155px;">
                                            <img src="@media_path@image" alt="">
                                        </div>
                                    }


                                }
                            </div>
                        </div>

                    </div>

                </div><!-- Product Image & Thumbnail End -->
                <!-- Product Content Start -->
                <div class="single-product-content col-lg-5 col-12 mb-30">

                    <!-- Title -->
                    <h1 class="title">@Model.ProductName</h1>

                    <!-- Product Rating -->
                    <span class="product-rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </span>

                    <!-- Price -->
                    <span class="product-price">€ 120.0</span>

                    <!-- Description -->
                    <div class="description">
                        <p>@Model.ShortDescription.</p>
                    </div>

                    <!-- Color -->
                    <div class="product-color fix">
                        <h5>Select Color</h5>
                        <form action="#">
                            <div class="color-box"><input type="radio" name="color" id="color-1"><label for="color-1" style="background-color: #51bd99;">color 1</label></div>
                            <div class="color-box"><input type="radio" name="color" id="color-2"><label for="color-2" style="background-color: #83a931;">color 2</label></div>
                            <div class="color-box"><input type="radio" name="color" id="color-3"><label for="color-3" style="background-color: #c8001e;">color 3</label></div>
                            <div class="color-box"><input type="radio" name="color" id="color-4"><label for="color-4" style="background-color: #414141;">color 4</label></div>
                        </form>
                    </div>

                    <!-- Quantity & Cart Button -->
                    <div class="product-quantity-cart fix">
                        <div class="product-quantity">
                            <span class="dec qtybtn"><i class="fa fa-angle-left"></i></span>
                            <input type="text" value="0" name="qtybox">
                            <span class="inc qtybtn"><i class="fa fa-angle-right"></i></span>
                        </div>
                        <button class="add-to-cart" data-product="@Model.ProductId" data-productname="@Model.ProductName" data-price-sale="@Model.Price" data-image="@Html.Raw(media_path)@imageFirst" onclick="AddItemToCart(this)">add to cart</button>
                    </div>

                    <!-- Action Button -->
                    <div class="product-action-button fix">
                        <button><i class="ion-ios-email-outline"></i>Email to a friend</button>
                        <button><i class="ion-ios-heart-outline"></i>Wishlist</button>
                        <button><i class="ion-ios-printer-outline"></i>Print</button>
                    </div>

                    <!-- Social Share -->
                    <div class="product-share fix">
                        <h6>Share :</h6>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-pinterest-p"></i></a>
                    </div>

                </div><!-- Product Content End -->

            </div><!-- Product Wrapper End-->


            <!-- Product Additional Info Start-->


            <div class="row">

                <!-- Nav tabs -->
                <div class="col-12 mt-30">
                    <ul class="pro-info-tab-list nav">
                        <li><a class="active" data-toggle="tab" href="#more-info">More info</a></li>
                        <li><a data-toggle="tab" href="#data-sheet">Data sheet</a></li>
                        <li><a data-toggle="tab" href="#reviews">Reviews</a></li>
                    </ul>
                </div>

                <!-- Tab panes -->
                <div class="tab-content col-12">

                    <div class="pro-info-tab tab-pane active" id="more-info">
                        <p>@Html.Raw(Model.FullDescription)</p>
                    </div>

                    <div class="pro-info-tab tab-pane" id="data-sheet">
                        <table class="table table-bordered">
                            <tbody>
                                <tr class="odd">
                                    <td>Compositions</td>
                                    <td>Cotton</td>
                                </tr>
                                <tr class="even">
                                    <td>Styles</td>
                                    <td>Casual</td>
                                </tr>
                                <tr class="odd">
                                    <td>Properties</td>
                                    <td>Short Sleeve</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="pro-info-tab tab-pane" id="reviews">
                        <a class="button" href="#">Be the first to write your review!</a>
                    </div>

                </div>

            </div><!-- Product Additional Info End-->

        }
        else
        {
            <div class="pro-info-tab tab-pane" id="reviews">
                <a class="button" href="#">Sản phẩm không tồn tại!</a>
            </div>
        }
    </div>
</div>
